<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#2D627A"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9CFBF6"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/lbNombreAlumnoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="#D0F6F6"
            android:padding="10dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/lbApellidosAlumnoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="#D0F6F6"
            android:padding="10dp"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="#9CFBF6"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/lbCiclolumnoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="#D0F6F6"
            android:padding="10dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/lbGrupoAlumnoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="#D0F6F6"
            android:padding="10dp"
            android:text="TextView" />
    </LinearLayout>

</LinearLayout>